<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalstudyAppKypcov" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.FinalstudyAppKypcov.TextView</item>
    </style>

    <style name="Theme.FinalstudyAppKypcov.TextView" parent="Theme.FinalstudyAppKypcov">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TextView.ConditionsGame" parent="Theme.FinalstudyAppKypcov.TextView">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Theme.FinalstudyAppKypcov.TextViewLink" parent="Theme.FinalstudyAppKypcov.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>